class EmployeeDecorator

  attr_reader :name, :status, :admin, :email, :gym_id

  def initialize(name, status, admin, email, gym_id)
    @name = name
    @status = status
    @admin = admin
    @email = email
    @gym_id = gym_id
  end

  def admin_option
    admin ? 'Admin: Sim' : 'Admin: Nao'
  end
end

